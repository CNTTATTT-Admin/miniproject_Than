# ============================================================================
# ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env.development, .env.staging, or .env.production
# ============================================================================

# API Configuration
REACT_APP_API_URL=http://localhost:8081/api
REACT_APP_WS_URL=ws://localhost:8081/ws

# Environment
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# JWT Configuration
REACT_APP_ACCESS_TOKEN_KEY=auth_token
REACT_APP_REFRESH_TOKEN_KEY=refresh_token
REACT_APP_USER_DATA_KEY=current_user
REACT_APP_TOKEN_EXPIRY_BUFFER=5

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT=5

# ============================================================================
# PRODUCTION EXAMPLE
# ============================================================================
# REACT_APP_API_URL=https://your-api-domain.com/api
# REACT_APP_WS_URL=wss://your-api-domain.com/ws
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG=false
# REACT_APP_LOG_LEVEL=error
